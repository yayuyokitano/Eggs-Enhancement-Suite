{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "Node",
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}